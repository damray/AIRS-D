# Backend API Configuration
# Copy this file to .env.backend and fill in your values

# Server Configuration
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:80

# Database Connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://admin:your_secure_database_password_here@postgres:5432/shop_assist

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here

# AIRS Security Configuration (optional - uses mock if not configured)
AIRS_API_URL=https://service.api.aisecurity.paloaltonetworks.com
AIRS_API_TOKEN=your_airs_api_token
AIRS_PROFILE_NAME=your_airs_profile_name

# LLM Provider: Google Vertex AI
VERTEX_PROJECT_ID=your_gcp_project_id
VERTEX_LOCATION=us-central1
VERTEX_API_KEY=your_vertex_api_key

# LLM Provider: Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key

# LLM Provider: Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# LLM Provider: Ollama (local)
OLLAMA_API_URL=http://ollama:11434/api/chat

# Rate Limiting Configuration (optional - defaults shown)
RATE_LIMIT_MAX_RETRIES=3
RATE_LIMIT_INITIAL_DELAY=1000
RATE_LIMIT_MAX_DELAY=60000
RATE_LIMIT_BACKOFF_MULTIPLIER=2
